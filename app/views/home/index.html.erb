<div data-controller="product"
      data-product-product-value="<%= @product.to_json(include: :product_variants) %>"
      data-action="
      visibility:buy-btn-visibility->product#buyBtnVisibilityEvent
      visibility:footer-visibility->product#footerVisibilityEvent
      product-variant:variant-selected->product#variantSelectedEvent
"
>

<div id="header" class="max-w-screen-2xl mx-auto my-8 max-sm:hidden">
  <div class="mx-4">
    <h1 class="italic text-base font-bold text-stone-950 cursor-pointer">La boutique du hassmac</h1>

  </div>
</div>

<hr class="w-100 border-mgray">

<div id="product_detail" class=" bg-gray-50 ">
  <div class="max-w-screen-2xl  mx-auto py-24 px-6 max-sm:py-8">
    <div class="grid grid-cols-5 gap-12 max-sm:grid-cols-1 max-sm:gap-4">
      <div id="product_images" class="col-span-3  max-sm:col-span-1" data-controller="slider">
        <div class="glide">
          <div class="glide__track" data-glide-el="track">
            <ul class="glide__slides w-full">
              <li class="glide__slide "><img class="rounded-md"
                                             src="https://picsum.photos/seed/a/900/1000"
                                             alt="img"></li>
              <li class="glide__slide "><img class="rounded-md"
                                             src="https://picsum.photos/seed/b/900/1000"
                                             alt="img"></li>
              <li class="glide__slide "><img class="rounded-md"
                                             src="https://picsum.photos/seed/c/900/1000"
                                             alt="img"></li>
            </ul>
          </div>
        </div>

        <div id="thumbnails" class="flex flex-row gap-4 mt-4 overflow-x-auto">
          <div class="rounded-md ">
            <img class="thumbnail active" data-action="click->slider#goToSlide" data-slider-index-param="0"
                 data-slider-target="thumbnail"
                 src="https://picsum.photos/seed/a/900/1000"
                 alt="img">
          </div>
          <div class="rounded-md">
            <img class="thumbnail" data-action="click->slider#goToSlide" data-slider-index-param="1"
                 data-slider-target="thumbnail"
                 src="https://picsum.photos/seed/b/900/1000"
                 alt="img">
          </div>
          <div class="rounded-md">
            <img class="thumbnail" data-action="click->slider#goToSlide" data-slider-index-param="2"
                 data-slider-target="thumbnail"
                 src="https://picsum.photos/seed/c/900/1000"
                 alt="img">
          </div>

        </div>
      </div>

      <div id="product" class="col-span-2 max-sm:col-span-1">
        <div class="flex flex-col w-full">
          <h2 class="text-4xl max-sm:text-3xl font-bold text-emerald-700"><%= @product.name %></h2>

          <div id="price">
            <div data-product-target="price" class="text-3xl max-sm:text-1xl font-bold text-stone-950">...</div>
          </div>

          <div class="flex flex-col justify-between mt-4">
            <p class="text-gray-500 text-base max-sm:text-sm"><%= @product.description.html_safe %></p>
          </div>


          <div class="flex flex-col pt-6">
            <div class="flex flex-col gap-4">
              <div
                data-controller="product-variant"
                data-product-variant-variant-value="rouge"
                data-product-variant-value-to-class-value="<%= color_to_tailwind.to_json %>"
                data-product-variant-type-value="couleur"
              >

                <div class="flex flex-row gap-1">
                  <div class="text-stone-950 text-base max-sm:text-sm font-bold pb-2">Couleur</div>
                  <div data-product-variant-target="variantname"
                       class="text-stone-950 text-base max-sm:text-sm"></div>
                </div>
                <div class="flex flex-row gap-4 pl-1">
                  <% @product.variants_map[color_key].each do |value| %>
                    <% color = color_to_tailwind[value.to_sym] %>
                    <button
                      data-action="click->product-variant#handleVariantValueChanged"
                      data-product-variant-target="variant"
                      data-product-variant-variant-param="<%= value %>"
                      data-product-variant-type-param="couleur"
                      type="button"
                      class="bg-<%= color %>-300 hover:bg-<%= color %>-500 focus:bg-<%= color %>-500 focus:ring-<%= color %>-500">
                    </button>
                  <% end %>
                </div>
              </div>
            </div>
            <div

              class="flex flex-row items-center mt-8">
              <button
                data-action="click->product#buy"
                data-controller="visibility"
                data-visibility-name-value="buy-btn"
                class="
                            cursor-pointer
                hover:bg-amber-300
                focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 focus:bg-amber-500
                transition duration-200 ease-in-out
                text-stone-950 text-base max-sm:text-sm font-base font-bold
                py-2.5 bg-amber-400 rounded-full justify-center items-center gap-2.5 inline-flex
                w-full
                ">
                Acheter
              </button>
            </div>
          </div>

        </div>

        <div>
          <div class="mt-8">
            <% @product.specifications.each_with_index do |(key, value), index| %>
              <div class="grid grid-cols-2 py-4 <%= 'border-t border-gray-500 border-opacity-50' unless index == 0 %> justify-start max-sm:grid-cols-1">
                <div class="text-stone-950 text-lg font-base max-sm:pb-4"><%= key %></div>
                <div class="text-gray-500 text-base max-sm:text-sm font-base"><%= value %></div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

