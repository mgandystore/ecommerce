<% if flash.any? %>
  <div
    id="flash-messages"
    class="fixed top-4 left-1/2 -translate-x-1/2 w-full max-w-md z-50 transform-gpu"
    data-controller="dashboard-flash"
    data-dashboard-flash-target="container">

    <% flash.each do |type, message| %>
      <% flash_classes = case type
                         when "notice", "success"
                           "bg-green-50 text-green-800 border-green-200"
                         when "error", "alert"
                           "bg-red-50 text-red-800 border-red-200"
                         else
                           "bg-yellow-50 text-yellow-800 border-yellow-200"
                         end %>

      <div class="mb-3 p-4 rounded-lg border shadow-sm <%= flash_classes %>">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <% case type %>
            <% when "notice", "success" %>
              <svg class="w-5 h-5 mr-2 shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
            <% when "error", "alert" %>
              <svg class="w-5 h-5 mr-2 shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
            <% else %>
              <svg class="w-5 h-5 mr-2 shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
            <% end %>
            <p class="text-sm font-medium"><%= message %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>