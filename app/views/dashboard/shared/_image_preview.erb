<div class="image-preview relative" <%= "data-image-id=#{data[:image_id]}" if local_assigns[:data].present? %>>
  <% if image %>
    <%= image_tag url_for(image.variant(:thumbnail)), class: "w-24 h-24 object-cover rounded" %>
  <% else %>
    <img src="" class="w-24 h-24 object-cover rounded" />
  <% end %>
  <button type="button"
          class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full p-1 hover:bg-red-600"
          data-action="click->dashboard-image-upload#removeImage">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
    </svg>
  </button>
</div>